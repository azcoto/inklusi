{
  "compilerOptions": {
    "target": "ES2018",
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@libs/*": ["src/trpc/libs/*"],
      "@db/*": ["prisma/*"]
    }
  },
  "include": ["./src/**/*.ts", "./prisma/**/*.ts", "src/api/loan/dto"],
  "exclude": ["node_modules", "dist", ".eslintrc.js"]
}
